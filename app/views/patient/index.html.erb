<%=form_with url: search_path, method: :post do |form| %>
  <div class="input-group mb-3">
        <%= form.label :search, "Search for:" %>
        <%= form.select :role, ["Specialization", "Experience"]%>
        <%= form.text_field :search %>
        <td><%=form.submit "search"%></td>
    </div>
        <%end%>
    
<h4 class="text-center"><%= @patient.name%> <%= @patient.surname%></h4>

<h5 class="text-uppercase"> availeble doctors</h5>

<table class="table table-striped jumbotron jumbotron-fluid">
  <thead>
    <tr>
      <th scope="col" class="text-center">s no.</th>
      <th scope="col" class="text-center">Name </th>
      <th scope="col" class="text-center">Surname </th>
      <th scope="col" class="text-center">Specialization </th>
      <th scope="col" class="text-center">Experience</th>
      <th scope="col" class="text-center">Date & Time </th>
    </tr>
  <tbody>
  </thead>
        <% @doctors.each do |doctor| %>
    <tr>
      <th class="text-center"scope="row"><%=doctor.id %></th>
      <td class="text-center"><%=doctor.name %></td>
      <td class="text-center"><%=doctor.surname %></td>
      <td class="text-center"><%=doctor.specialization %></td>
      <td class="text-center"><%=doctor.experience %></td>

        <%=form_with model: doctor, url: appointment_index_path, method: :post do |form| %>
        <td><%= form.datetime_local_field :appointment_datetime %></td>
        <td><%= form.hidden_field :doctor_id,value: doctor.id%></td>
        <td><%=form.submit "Appoint"%></td>
        <%end%>
    </tr>
    <% end %>
  </tbody>
</table>






















